container_commands:
  01_migrate:
    command: "source /var/app/venv/*/bin/activate && python manage.py makemigrations --merge"
    command: "source /var/app/venv/*/bin/activate && python manage.py migrate --noinput"
    leader_only: true
  02_collectstatic:
    command: "source /var/app/venv/*/bin/activate && python manage.py collectstatic --noinput"

option_settings:
  "aws:elasticbeanstalk:application:environment":
    DJANGO_SETTINGS_MODULE: "oazserver.settings"
    "PYTHONPATH": "/var/app/current/oazserver:$PYTHONPATH"
  "aws:elasticbeanstalk:container:python":
    WSGIPath: oazserver.wsgi:application
    NumProcesses: 3
    NumThreads: 20
  "aws:elasticbeanstalk:environment:proxy:staticfiles":
    "/static/": "static/"
