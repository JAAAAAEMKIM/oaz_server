container_commands:
    01_migrate:
        command: "source /opt/python/run/venv/bin/activate && python manage.py makemigrations --merge"
        command: "source /opt/python/run/venv/bin/activate && python manage.py migrate --noinput"
        leader_only: true

option_settings:
    "aws:elasticbeanstalk:application:environment":
        DJANGO_SETTINGS_MODULE: "oazserver.settings"
        "PYTHONPATH": "/opt/python/current/app/oazserver:$PYTHONPATH"
    "aws:elasticbeanstalk:container:python":
        WSGIPath: "oazserver/wsgi:application"
        NumProcesses: 1
        NumThreads: 5