container_commands:
    01_migrate:
        command: "source /opt/python/run/venv/bin/activate && python manage.py migrate"
        leader_only: true

option_settings:
    "aws:elasticbeanstalk:application:environment":
        DJANGO_SETTINGS_MODULE: "oazserver.settings"
        "PYTHONPATH": "/opt/python/current/app/mysite:$PYTHONPATH"
    "aws:elasticbeanstalk:container:python":
        WSGIPath: oazserver/wsgi:application
        NumProcesses: 3
        NumThreads: 20